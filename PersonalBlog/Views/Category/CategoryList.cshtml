@model List<CategoryViewModel>
@using PersonalBlog.Extensions
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kategoriler</h1>

<a asp-controller="Category" asp-action="AddOrUpdate" class="btn btn-outline-primary mb-2">
    Yeni Kategori
</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>
                    <a asp-action="AddOrUpdate" asp-controller="Category" asp-route-categoryId="@item.CategoryId" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-categoryId="@item.CategoryId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

